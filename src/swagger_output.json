{
  "openapi": "3.0.0",
  "info": {
    "title": "Conta 365",
    "description": "Api desenvolvida para controle de finanças - Projeto 3 do curso DevinHouse - NodeJs",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333/",
      "description": "Development server",
      "templates": {
        "scheme": {
          "enum": [
            "http",
            "https"
          ],
          "default": "http"
        }
      }
    },
    {
      "url": "https://safe-headland-78066.herokuapp.com/",
      "description": "Production server",
      "templates": {
        "scheme": {
          "enum": [
            "http",
            "https"
          ],
          "default": "https"
        }
      }
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "description": "Caminho para trazer toda a lista de usuários.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "description": "Caminho para trazer as informações de usuário específico pelo seu ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "patch": {
        "description": "Caminho para atualizar as informações de um usuário informando seu ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "example": "Fulano"
                  },
                  "email": {
                    "example": "fulano@example.com"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/newuser": {
      "post": {
        "description": "Caminho para criar um novo usuário.",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Fulano"
                },
                "email": {
                  "type": "string",
                  "example": "fulano@example.com"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "example": "Fulano"
                  },
                  "email": {
                    "example": "fulano@example.com"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/finance/{userid}": {
      "post": {
        "description": "Caminho para fazer upload de finanças através de um arquivo .xlsx. Dados de despesa devem ser inserido obrigatóriamente na seguinte ordem: price, typeOfExpenses, date, name.",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "file",
                    "format": "binary"
                  }}}}}},
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "get": {
        "description": "",
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "typeofexpense",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/{userid}/{financeid}": {
      "delete": {
        "description": "Caminho para deletar uma finança específica de um usuário específico, informando, respectivamente, o ID do usuário e o ID da finança a ser deletada.",
        "parameters": [
          {
            "name": "userid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "financeid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  }
}